<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/relativeLayout">
    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/fbshare"
        android:text="Share on Facebook"
        android:textColor="#ffffff"
      android:background="#3b5998"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/btnsharetwter"

        android:text="Share on Twitter"
        android:textColor="#ffffff"
        android:background="#55acee"
        android:layout_below="@+id/fbshare"
        android:layout_alignStart="@+id/fbshare"
        android:layout_marginTop="49dp" />
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like and Follow us on Facebook and Twitter"
        android:id="@+id/textView22"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
